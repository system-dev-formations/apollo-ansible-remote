---
- hosts: all
  user: centos

  tasks:
    - name: Set authorized key took from file
      authorized_key:
       user: centos
       state: present
       key: "{{ lookup('file','/home/hme/.ssh/id_rsa.pub') }}"
    - name: Set authorized private key copy from file
      copy:
        src: /home/hme/.ssh/id_rsa
        dest: /home/centos/.ssh/id_rsa
        owner: centos
        group: centos
        mode: '0600'



